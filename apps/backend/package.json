{
  "name": "@nodebooks/server",
  "version": "0.1.0",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "nodemon --watch src --ext ts,js --ignore ../client/.next --ignore ../client/node_modules --signal SIGTERM --exec tsx src/index.ts",
    "dev:api-only": "EMBED_NEXT=false nodemon --watch src --ext ts,js --ignore ../client/.next --ignore ../client/node_modules --signal SIGTERM --exec tsx src/index.ts",
    "build": "tsc --project tsconfig.json",
    "start": "NODE_ENV=production node dist/index.js",
    "lint": "eslint src --ext .ts",
    "test": "vitest run"
  },
  "dependencies": {
    "@nodebooks/config": "workspace:*",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/websocket": "^11.2.0",
    "@nodebooks/notebook-schema": "workspace:*",
    "@nodebooks/runtime-node": "workspace:*",
    "@nodebooks/runtime-host": "workspace:*",
    "@nodebooks/runtime-protocol": "workspace:*",
    "@nodebooks/runtime-node-worker": "workspace:*",
    "@nodebooks/notebook-ui": "workspace:*",
    "@langchain/core": "^0.3.78",
    "@langchain/openai": "^0.6.14",
    "fastify": "^5.6.1",
    "heroku-langchain": "^0.4.2",
    "langchain": "^0.3.35",
    "nanoid": "^5.1.6",
    "next": "^15.5.4",
    "pg": "^8.16.3",
    "sql.js": "^1.13.0",
    "ws": "^8.18.3",
    "yaml": "^2.8.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@types/pg": "^8.15.5",
    "@types/sql.js": "^1.4.9",
    "@types/ws": "^8.18.1",
    "eslint": "^9.36.0",
    "nodemon": "^3.1.10",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
