{
  "name": "@nodebooks/server",
  "version": "0.5.1",
  "description": "Fastify server that powers the NodeBooks API and embedded web app.",
  "author": "Juli√°n Duque <julianduquej@gmail.com>",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js"
    },
    "./auth/service": {
      "types": "./dist/auth/service.d.ts",
      "import": "./dist/auth/service.js"
    },
    "./auth/password": {
      "types": "./dist/auth/password.d.ts",
      "import": "./dist/auth/password.js"
    },
    "./store/factory": {
      "types": "./dist/store/factory.d.ts",
      "import": "./dist/store/factory.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "client",
    "templates"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=22.6.0"
  },
  "scripts": {
    "dev": "nodemon --watch src --ext ts,js --ignore ../client/.next --ignore ../client/node_modules --signal SIGTERM --exec tsx src/index.ts",
    "dev:api-only": "EMBED_NEXT=false nodemon --watch src --ext ts,js --ignore ../client/.next --ignore ../client/node_modules --signal SIGTERM --exec tsx src/index.ts",
    "build": "tsc --project tsconfig.build.json && pnpm run prepare:client",
    "prepare:client": "node ../../scripts/embed-client-assets.mjs",
    "prepack": "pnpm run build && pnpm run prepare:client",
    "start": "NODE_ENV=production node dist/index.js",
    "lint": "eslint src --ext .ts",
    "test": "vitest run"
  },
  "dependencies": {
    "@ai-sdk/openai": "^2.0.77",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/websocket": "^11.2.0",
    "@lydell/node-pty": "^1.1.0",
    "@nodebooks/ai-cell": "workspace:*",
    "@nodebooks/cell-plugin-api": "workspace:*",
    "@nodebooks/config": "workspace:*",
    "@nodebooks/http-cell": "workspace:*",
    "@nodebooks/notebook-schema": "workspace:*",
    "@nodebooks/plot-cell": "workspace:*",
    "@nodebooks/plugin-engine": "workspace:*",
    "@nodebooks/runtime-host": "workspace:*",
    "@nodebooks/runtime-node": "workspace:*",
    "@nodebooks/runtime-node-worker": "workspace:*",
    "@nodebooks/runtime-protocol": "workspace:*",
    "@nodebooks/sql-cell": "workspace:*",
    "@nodebooks/terminal-cells": "workspace:*",
    "@nodebooks/ui": "workspace:*",
    "@nodebooks/ui-runtime": "workspace:*",
    "ai": "^5.0.107",
    "fastify": "^5.6.2",
    "heroku-ai-provider": "^0.4.3",
    "jsdom": "^27.2.0",
    "nanoid": "^5.1.6",
    "next": "^16.0.7",
    "pg": "^8.16.3",
    "ws": "^8.18.3",
    "yaml": "^2.8.2",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "@types/react": "19.2.7",
    "@types/ws": "^8.18.1",
    "eslint": "^9.39.1",
    "nodemon": "^3.1.11",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}
