{
  "name": "@nodebooks/runtime-node",
  "version": "0.2.1",
  "description": "Node.js runtime harness that executes notebook code for NodeBooks.",
  "author": "Juli√°n Duque <julianduquej@gmail.com>",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "prepack": "pnpm run build",
    "lint": "eslint .",
    "test": "vitest run",
    "dev": "tsc --project tsconfig.build.json --watch"
  },
  "dependencies": {
    "@nodebooks/config": "workspace:*",
    "@nodebooks/notebook-schema": "workspace:*",
    "@nodebooks/ui": "workspace:*",
    "esbuild": "^0.25.10"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "eslint": "^9.36.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
