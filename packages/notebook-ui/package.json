{
  "name": "@nodebooks/notebook-ui",
  "version": "0.1.0",
  "type": "module",
  "main": "src/index.tsx",
  "types": "src/index.tsx",
  "private": true,
  "scripts": {
    "build": "run-p build:css build:types",
    "build:types": "tsc --project tsconfig.json",
    "build:css": "tailwindcss -i ./src/styles.css -o ./dist/styles.css",
    "dev": "run-p dev:css dev:types",
    "dev:types": "tsc --project tsconfig.json --watch",
    "dev:css": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --watch",
    "lint": "eslint ."
  },
  "peerDependencies": {
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19"
  },
  "dependencies": {
    "@nodebooks/notebook-schema": "workspace:*",
    "dompurify": "^3.2.7",
    "lucide-react": "^0.469.0",
    "marked": "^16.3.0"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.13",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/dompurify": "^3.2.0",
    "@types/react": "^19.1.13",
    "eslint": "^9.36.0",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2"
  },
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "types": "./src/index.tsx",
      "default": "./src/index.tsx"
    },
    "./styles.css": "./dist/styles.css"
  }
}
