{
  "name": "@nodebooks/ui",
  "version": "0.4.0",
  "description": "React components and styles used by the NodeBooks web client.",
  "author": "Juli√°n Duque <julianduquej@gmail.com>",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "run-p build:css build:types",
    "prepack": "pnpm run build",
    "build:types": "tsc --project tsconfig.build.json",
    "build:css": "tailwindcss -i ./src/styles.css -o ./dist/styles.css",
    "dev": "run-p dev:css dev:types",
    "dev:types": "tsc --project tsconfig.json --watch",
    "dev:css": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --watch",
    "lint": "eslint ."
  },
  "peerDependencies": {
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19"
  },
  "dependencies": {
    "@nodebooks/notebook-schema": "workspace:*",
    "clsx": "^2.1.1",
    "d3-force": "^3.0.0",
    "dompurify": "^3.3.0",
    "highlight.js": "^11.11.1",
    "katex": "^0.16.25",
    "lucide-react": "^0.556.0",
    "maplibre-gl": "^5.14.0",
    "marked": "^17.0.1",
    "marked-katex-extension": "^5.1.6",
    "mermaid": "^11.12.2",
    "plotly.js-dist-min": "^3.3.0",
    "three": "^0.181.2",
    "vega": "^6.2.0",
    "vega-embed": "^7.1.0",
    "vega-lite": "^6.4.1"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.17",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/d3-force": "^3.0.10",
    "@types/geojson": "^7946.0.16",
    "@types/react": "^19.2.7",
    "@types/three": "^0.181.0",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3"
  },
  "files": [
    "dist",
    "src"
  ],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css"
  }
}
