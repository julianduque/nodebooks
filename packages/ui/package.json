{
  "name": "@nodebooks/ui",
  "version": "0.3.0",
  "description": "React components and styles used by the NodeBooks web client.",
  "author": "Juli√°n Duque <julianduquej@gmail.com>",
  "license": "MIT",
  "type": "module",
  "main": "src/index.tsx",
  "types": "src/index.tsx",
  "scripts": {
    "build": "run-p build:css build:types",
    "prepack": "pnpm run build",
    "build:types": "tsc --project tsconfig.json",
    "build:css": "tailwindcss -i ./src/styles.css -o ./dist/styles.css",
    "dev": "run-p dev:css dev:types",
    "dev:types": "tsc --project tsconfig.json --watch",
    "dev:css": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --watch",
    "lint": "eslint ."
  },
  "peerDependencies": {
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19"
  },
  "dependencies": {
    "@nodebooks/notebook-schema": "workspace:*",
    "d3-force": "^3.0.0",
    "dompurify": "^3.2.7",
    "highlight.js": "^11.11.1",
    "lucide-react": "^0.544.0",
    "maplibre-gl": "^5.7.3",
    "marked": "^16.3.0",
    "plotly.js-dist-min": "^3.1.0",
    "three": "^0.180.0",
    "vega": "^6.2.0",
    "vega-embed": "^7.0.2",
    "vega-lite": "^6.4.1"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.13",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/d3-force": "^3.0.4",
    "@types/geojson": "^7946.0.14",
    "@types/react": "^19.1.15",
    "@types/three": "^0.180.0",
    "eslint": "^9.36.0",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2"
  },
  "files": [
    "dist",
    "src"
  ],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./src/index.tsx",
      "default": "./src/index.tsx"
    },
    "./styles.css": "./dist/styles.css",
    "./runtime/ui-helpers-dts": {
      "types": "./src/runtime/ui-helpers-dts.d.ts",
      "import": "./src/runtime/ui-helpers-dts.js",
      "default": "./src/runtime/ui-helpers-dts.js"
    },
    "./runtime/ui-helpers-module": {
      "types": "./src/runtime/ui-helpers-module.d.ts",
      "import": "./src/runtime/ui-helpers-module.js",
      "default": "./src/runtime/ui-helpers-module.js"
    }
  }
}
