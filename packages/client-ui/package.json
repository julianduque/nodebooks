{
  "name": "@nodebooks/client-ui",
  "version": "0.1.0",
  "description": "Shared UI components and utilities for NodeBooks client applications and plugins",
  "author": "Juli√°n Duque <julianduquej@gmail.com>",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "run-p build:css build:types",
    "prepack": "pnpm run build",
    "build:types": "tsc --project tsconfig.build.json",
    "build:css": "tailwindcss -i ./src/styles.css -o ./dist/styles.css",
    "dev": "run-p dev:css dev:types",
    "dev:types": "tsc --project tsconfig.json --watch",
    "dev:css": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --watch",
    "lint": "eslint ."
  },
  "peerDependencies": {
    "next": "^16.0.0",
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "@nodebooks/config": "workspace:*",
    "@nodebooks/notebook-schema": "workspace:*",
    "@nodebooks/ui": "workspace:*",
    "@nodebooks/ui-runtime": "workspace:*",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "ai": "^5.0.107",
    "ansi-to-html": "^0.7.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "dompurify": "^3.3.0",
    "isomorphic-dompurify": "^2.33.0",
    "lucide-react": "^0.556.0",
    "monaco-editor": "^0.55.1",
    "nanoid": "^5.1.6",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "use-stick-to-bottom": "^1.1.1"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.17",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "eslint": "^9.39.1",
    "next": "^16.0.7",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3"
  },
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./components/ui": {
      "types": "./dist/components/ui/index.d.ts",
      "import": "./dist/components/ui/index.js",
      "default": "./dist/components/ui/index.js"
    },
    "./components/ui/*": {
      "types": "./dist/components/ui/*.d.ts",
      "import": "./dist/components/ui/*.js",
      "default": "./dist/components/ui/*.js"
    },
    "./components/monaco": {
      "types": "./dist/components/monaco/index.d.ts",
      "import": "./dist/components/monaco/index.js",
      "default": "./dist/components/monaco/index.js"
    },
    "./components/monaco/*": {
      "types": "./dist/components/monaco/*.d.ts",
      "import": "./dist/components/monaco/*.js",
      "default": "./dist/components/monaco/*.js"
    },
    "./components/output": {
      "types": "./dist/components/output/index.d.ts",
      "import": "./dist/components/output/index.js",
      "default": "./dist/components/output/index.js"
    },
    "./components/output/*": {
      "types": "./dist/components/output/*.d.ts",
      "import": "./dist/components/output/*.js",
      "default": "./dist/components/output/*.js"
    },
    "./components/ai-elements": {
      "types": "./dist/components/ai-elements/index.d.ts",
      "import": "./dist/components/ai-elements/index.js",
      "default": "./dist/components/ai-elements/index.js"
    },
    "./components/ai-elements/*": {
      "types": "./dist/components/ai-elements/*.d.ts",
      "import": "./dist/components/ai-elements/*.js",
      "default": "./dist/components/ai-elements/*.js"
    },
    "./lib": {
      "types": "./dist/lib/index.d.ts",
      "import": "./dist/lib/index.js",
      "default": "./dist/lib/index.js"
    },
    "./lib/*": {
      "types": "./dist/lib/*.d.ts",
      "import": "./dist/lib/*.js",
      "default": "./dist/lib/*.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js",
      "default": "./dist/types/index.js"
    },
    "./types/*": {
      "types": "./dist/types/*.d.ts",
      "import": "./dist/types/*.js",
      "default": "./dist/types/*.js"
    },
    "./styles.css": "./dist/styles.css"
  }
}
